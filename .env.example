APP_NAME=Plataforma de Crédito Rural
APP_VERSION=1.0.0
DEBUG=False
APP_ENV=development

# ============================================
# CONFIGURAÇÃO DO BANCO DE DADOS
# ============================================

DATABASE_URL=sqlite:///./test.db

# ============================================
# CAMINHOS DOS ARQUIVOS
# ============================================

MODEL_DIR=app/models
DATA_DIR=data/raw

# ============================================
# CONFIGURAÇÃO DE LOGGING
